#include <16F628A.h>
#use delay(clock=20000000)
#FUSES NOWDT                    //No Watch Dog Timer
#FUSES HS                       //High speed Osc (> 4mhz for PCM/PCH) (>10mhz for PCD)
#FUSES NOPUT                    //No Power Up Timer
#FUSES NOPROTECT                //Code not protected from reading
#FUSES NOBROWNOUT               //No brownout reset
#FUSES MCLR                     //Master Clear pin enabled
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O
#FUSES NOCPD                    //No EE protection
//-------------------- PRUEBA 1 -----------------------
#DEFINE SW1 PORTA,0
#DEFINE SW2 PORTA,1
#DEFINE LED PORTB,7
#BYTE PORTB= 6
#BYTE PORTA= 5
   
Byte CONST display[10]= {0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07,0x7f,0x67};

float duty=0.06; //
int onTime;
int contador;


void main(){   
   set_tris_a(0xFF); //TODOS ENTRADAS
   set_tris_b(0x00); // TODOS PINES SALIDAS DIGITALES
   
   setup_comparator(NC_NC_NC_NC);
   setup_vref(FALSE);
   contador = 0;  

   while(true){   
      onTime = (int)(duty*50);    
      BIT_SET(LED);
      delay_ms(onTime);
      BIT_CLEAR(LED);       
      delay_ms(50-onTime);         
      portb = display[contador];// Mostrar ciclo de trabajo
         if(!BIT_TEST(SW1) && duty<=0.92){
           duty+=0.01;  
           //delay_ms(90);
         }
         if(!BIT_TEST(SW2) && duty>0.06){         
            duty-=0.01; 
            //delay_ms(90);
         }
         
       switch(duty){
         case 0.10://cuando el contador sea 20
         portb=0b10101010;//por el puerto b saldrá este valor
         break;
         case 0.20:
         portb=0b00001111;
         break;
         case 0.30:
         portb=0b11111111;
         break;
         case 0.40:
         portb=0b11000011;
         break;
         case 0.50:
         portb=0b11000011;
         break;
         case 0.60:
         portb=0b11000011;
         break;
         case 0.70:
         portb=0b11000011;
         break;
         case 0.80:
         portb=0b11000011;
         break;
         case 0.90:
         portb=0b11000011;
         break;
      }
     
   }
}



